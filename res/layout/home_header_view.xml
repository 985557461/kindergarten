<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.xy.MeiFour"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res/com.xy.MeiFour"
                 android:layout_width="match_parent"
                 android:layout_height="135dp">
        <com.xy.MeiFour.ui.home.HomeBannerViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <com.xy.MeiFour.util.viewpager_indicator.CirclePageIndicator
                android:id="@+id/circlePageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="20dp"/>
    </FrameLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐商家"
            android:textColor="#efb33c"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻找最舒心的诚信买家!"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="31dp">
            <com.xy.MeiFour.util.round_image.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="#f5a9a7"
                    app:border_color="#e6a1a1"
                    app:border_width="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="31dp">
            <com.xy.MeiFour.util.round_image.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="#f3c550"
                    app:border_color="#f9bb51"
                    app:border_width="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搭配"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="31dp">
            <com.xy.MeiFour.util.round_image.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="#f497bf"
                    app:border_color="#e68eb3"
                    app:border_width="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.xy.MeiFour.util.round_image.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="#e49af4"
                    app:border_color="#e392f4"
                    app:border_width="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折扣"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
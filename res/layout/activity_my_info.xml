<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="#ffffff">
    <!--title-->
    <RelativeLayout
            android:id="@+id/titleRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="#ff2e48">
        <FrameLayout
                android:id="@+id/backFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据上传"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"/>
        <FrameLayout
                android:id="@+id/rightFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone">
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/icon_chat"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="18.33dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="141dp">
                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="#ff0000"
                            android:layout_marginBottom="6dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="#ff0000"
                            android:layout_marginBottom="6dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="7dp"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_stroken_trans_bg_shape"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="14dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-20岁"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"/>
                <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:src="#ff0000"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="7dp"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_stroken_trans_bg_shape"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="14dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-20KG"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"/>
                <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:src="#ff0000"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="身高"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="7dp"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/blue_stroken_trans_bg_shape"
                    android:paddingRight="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-20COM"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"/>
                <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:src="#ff0000"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="职业"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#00000000"
                    android:textCursorDrawable="@null"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#333333"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="下一步"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="#e40d27"
                    android:layout_marginTop="55dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login_register_bg"
            android:scaleType="centerCrop"/>
    <ImageView
            android:id="@+id/logoImage"
            android:layout_width="50dp"
            android:layout_height="62.67dp"
            android:src="#ff0000"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
    <ImageView
            android:id="@+id/nameImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_meifor"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logoImage"
            android:layout_marginTop="30dp"/>
    <!--国家-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/locationRL">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="国家和地区"
                  android:textColor="#898381"
                  android:textSize="15sp"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"/>
        <ImageView
                android:id="@+id/rightArrow"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:src="#ff0000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="中国"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/rightArrow"
                android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
            android:id="@+id/lineOne"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="1dp"
            android:background="#5c4c48"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/locationRL"
            android:layout_marginTop="7dp"/>
    <!--手机号码-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineOne"
            android:layout_centerHorizontal="true"
            android:id="@+id/phoneNumRL"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
        <TextView
                android:id="@+id/textQuHao"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="+ 86"
                  android:textColor="#ff0000"
                  android:textSize="15sp"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"/>
        <View
                android:id="@+id/lineTwo"
                android:layout_width="1dp"
                android:layout_height="38.67dp"
                android:background="#ff0000"
                android:layout_toRightOf="@id/textQuHao"
                android:layout_marginLeft="18.67dp"/>
        <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="#898381"
                android:hint="手机号码"
                android:inputType="number"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lineTwo"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"/>
    </RelativeLayout>
    <View
            android:id="@+id/lineThree"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="1dp"
            android:background="#5c4c48"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/phoneNumRL"/>
    <!--密码-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lineThree"
            android:id="@+id/pwdRL">
        <ImageView
                android:id="@+id/pwdImage"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/icon_lock"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="#898381"
                android:hint="请输入密码"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pwdImage"
                android:textSize="15sp"/>
    </RelativeLayout>
    <View
            android:id="@+id/lineFour"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="1dp"
            android:background="#5c4c48"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pwdRL"/>
    <!--手机验证码-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="53.33dp"
            android:layout_below="@id/lineFour"
            android:layout_centerHorizontal="true"
            android:id="@+id/verCodeRL"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
        <TextView
                android:id="@+id/getVerCode"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        <View
                android:id="@+id/lineFive"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_toLeftOf="@id/getVerCode"/>
        <EditText
                android:id="@+id/verCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="#898381"
                android:hint="请输入验证码"
                android:inputType="number"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/lineFive"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"/>
    </RelativeLayout>
    <View
            android:id="@+id/lineSix"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="1dp"
            android:background="#5c4c48"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/verCodeRL"/>
    <FrameLayout
            android:id="@+id/registerFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
        <TextView
                android:id="@+id/register"
                android:layout_width="180dp"
                android:layout_height="43dp"
                android:text="注 册"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/login_selector"
                android:layout_marginBottom="50dp"/>
    </FrameLayout>
</RelativeLayout>
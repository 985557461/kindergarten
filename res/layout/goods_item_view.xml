<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.xy.MeiFour"
              android:orientation="vertical"
              android:background="@drawable/goods_item_round_shape"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.xy.MeiFour.util.round_image.RoundPartImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:scaleType="centerCrop"
            app:roundWidth="10dp"
            app:roundHeight="10dp"
            app:leftTopRound="true"
            app:rightTopRound="true"
            app:leftBottomRound="false"
            app:rightBottomRound="false"
            android:layout_marginBottom="12dp"/>
    <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时尚连衣裙最低价出售（韩版很受欢迎）"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#393939"
            android:textSize="13sp"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="15dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="12dp">
        <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299.00"
                android:textColor="#ff2d47"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/likeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#a0a0a0"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:background="#ff0000"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/likeNumber"
                android:layout_marginRight="5dp"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="#ffffff">
    <!--title-->
    <RelativeLayout
            android:id="@+id/titleRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="#ff2e48">
        <FrameLayout
                android:id="@+id/backFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人数据"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"/>
        <FrameLayout
                android:id="@+id/rightFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone">
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/icon_chat"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="114.66dp"
            android:text="自动信息已经提交完成，请耐心等待"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:background="@drawable/info_commited_bg"
            android:layout_marginTop="31dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="进入智能匹配"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:background="#ff003b"
            android:layout_marginTop="32dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="邀请专家给出建议"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:background="#b401ff"
            android:layout_marginTop="31dp"/>
</LinearLayout>
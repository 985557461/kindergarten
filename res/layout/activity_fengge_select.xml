<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="#ffffff">
    <!--title-->
    <RelativeLayout
            android:id="@+id/titleRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="#ff2e48">
        <FrameLayout
                android:id="@+id/backFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格选择"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"/>
        <FrameLayout
                android:id="@+id/rightFL"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone">
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/icon_chat"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="动态选择"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="晾干选择"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="5dp"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:background="#ff0000"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="只去选择"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="5dp"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="126.66dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="126.66dp"
                            android:background="#ff0000"
                            android:layout_marginRight="23.33dp"/>
                    <ImageView
                            android:layout_width="89dp"
                            android:layout_height="126.66dp"
                            android:background="#ff0000"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="下一步"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="#e40d27"
                    android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>